@model ProjServiceDocument.Models.Document

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <div class="row">
        <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DocumentNumber" class="control-label"></label>
                    <input asp-for="DocumentNumber" id="cnpj" name="cnpj" class="form-control" />
                    <span asp-validation-for="DocumentNumber" class="text-danger"></span>
                    <button onclick="findCNPJ()" >Consultar</button>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" id="name" name="name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <a asp-action="GetDocument">Call Service</a> 
        </div>
    </div>
</div>
